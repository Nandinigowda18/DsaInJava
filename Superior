import java.util.*;
public class Superior {
	
	public static int superior(int arr[], int n) {
		// n= arr.length-1;
		 int sup= n;int count =0;
		 
		 for(int i=n-1;i>=0;i--) {
			 if(arr[i]>sup) {
				 sup=arr[i];
				 count++;
			 }
		 }
		 
		return count;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr= {8,10,9,7};
		 System.out.println(superior(arr,4));
	}

}
